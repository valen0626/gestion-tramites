{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,       // Habilita los decoradores
    "emitDecoratorMetadata": true         // Emite metadatos de los decoradores
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
